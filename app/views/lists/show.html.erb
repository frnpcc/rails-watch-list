<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1478720568477-152d9b164e26?q=80&w=2070&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D)">
  <h1><%= @list.name %></h1>
</div>
<div class="container">
  <div class="d-flex">
    <% @list.movies.each do |movie| %>
      <div class="movie-card m-4">
        <img src="<%= movie.poster_url %>" alt="movie poster" style="height:300px;object-fit: cover;width: 100%">
        <h4><%= movie.title %></h4>
        <p><strong><%= movie.rating %></strong></p>
        <p><%= movie.overview %></p>
      </div>
    <% end %>
  </div>
</div>
